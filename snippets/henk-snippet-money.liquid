{% comment %}
  Usage:
    {% render 'henk-snippet-money', amount: current_variant.price %}
{% endcomment %}

{% assign euros = amount | divided_by: 100 %}
{% assign cents = amount | modulo: 100 %}

{% if cents > 0 %}
  {{ euros }},{{ cents | prepend: '0' }} €
{% else %}
  {{ euros }} €
{% endif %}
