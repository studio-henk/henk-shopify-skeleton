{{ request }}
<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    {{ '_henk-header.css' | asset_url | stylesheet_tag: preload: true }}

  {% if request.host contains '127.0.0.1' or request.host contains 'localhost' %}
    <style>
      #shopify-pc__banner { display: none !important; }
    </style>
  {% endif %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
