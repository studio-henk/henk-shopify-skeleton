{% if cart.item_count > 0 %}
  {% assign cart_title = 'cart.title' | t %}
  {% assign button_label = 'cart.continue_shopping' | t %}

  {% render 'henk-section-header',
    title: cart_title,
    level: 1,
    align: 'left',
    button_element: 'a',
    button_label: button_label,
    button_url: routes.collections_url,
    button_variant: 'ghost',
    button_icon_name: 'chevron-left'
  %}

  <section class="henk-cart-section">
    <form
      action="{{ routes.cart_url }}"
      method="post"
      class="henk-cart-section__form"
    >
      <div class="henk-cart-section__grid">
        <div class="henk-cart-section__grid-item">
          <ul class="henk-cart-section__list">
            {% for item in cart.items %}
              <li class="henk-cart-section__list-item">
                <img
                  class="henk-cart-section__item-image"
                  src="{{ item.image| image_url}}"
                  alt="item image"
                  width="{{ item.image.width }}"
                  height="{{ item.image.height }}"
                >
                <div class="henk-cart-section__item-info">
                  <p class="henk-cart-section__item-title">{{ item.product.title }}</p>

                  <div class="henk-cart-section__item-controls">
                    <henk-quantity-stepper
                      name="updates[{{ item.key }}]"
                      value="{{item.quantity}}"
                    ></henk-quantity-stepper>
                    <input
                      class="henk-cart-section__item-quantity"
                      data-js-replace
                      type="text"
                      inputmode="numeric"
                      pattern="[0-9]*"
                      name="updates[{{ item.key }}]"
                      value="{{ item.quantity }}"
                    >
                    <input
                      type="submit"
                      value="{{ 'cart.update' | t }}"
                      class="henk-button henk-cart-section__item-update-button"
                      data-js-replacex
                    >
                    {% assign remove_label = 'cart.remove' | t %}

                    {% render 'henk-button',
                      element: 'a',
                      label: remove_label,
                      href: item.url_to_remove,
                      icon_name: 'trash',
                      icon_only: true,
                      aria_label: remove_label,
                      extra_classes: 'henk-cart-section__item-remove-button'
                    %}
                  </div>

                  <p>{{ item.line_price | money_without_trailing_zeros }}</p>
                  <p>total_discount: {{ item.total_discount }}</p>
                  <p>discounted price: {{ item.discounted_price }}</p>
                  <p>gift_card: {{ item.gift_card }}</p>
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="henk-cart-section__grid-item xcart-list__summary">
          <div class="henk-cart-section__summary-wrapper">
            <table class="cart-totals henk-table henk-table--no-border">
              <caption class="visually-hidden">
                Your cart totals
              </caption>
              <tbody>
                <tr>
                  <th scope="row">Totaal incl BTW</th>
                  <td>{{ cart.items_subtotal_price | money_without_trailing_zeros }}</td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="row">Nu te betalen</th>
                  <td>
                    <strong>{{ cart.total_price | money_without_trailing_zeros }}</strong>
                  </td>
                </tr>
              </tfoot>
            </table>
            <div class="henk-button-group henk-button-group--right">
              <input
                type="submit"
                name="checkout"
                value="{{ 'cart.checkout' | t }}"
                class="henk-button henk-button--primary"
              >
            </div>
          </div>
        </div>
      </div>
    </form>
  </section>
{% else %}
  {% assign cart_title = 'cart.empty.title' | t %}
  {% assign button_label = 'cart.empty.continue_shopping' | t %}

  {% render 'henk-section-header',
