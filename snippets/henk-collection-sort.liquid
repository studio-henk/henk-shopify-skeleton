<form method="get" action="{{ collection.url }}" class="henk-collection-sort-form">
  <div
    class="henk-labeled-select henk-labeled-select--dir-vertical henk-labeled-select--floating"
  >
    <div class="select-wrapper">
      <select
        class="henk-select"
        id="sort-by"
        name="sort_by"
        onchange="this.form.submit()"
      >
        {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
        {% for option in collection.sort_options %}
          <option
            value="{{ option.value }}"
            {% if option.value == sort_by %}
              selected="selected"
            {% endif %}
          >
            {{ option.name }}
          </option>
        {% endfor %}
      </select>
      <label class="henk-label" for="form_invoiceAddressCountry">
        <span class="henk-label-text">Sort by</span>
      </label>
    </div>
  </div>

