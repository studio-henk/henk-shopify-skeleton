{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

{% comment %} {% if template == 'cart' %} {% endcomment %}
{% comment %}   <script type="module" src="{{ 'henk-quantity-stepper.js' | asset_url }}"></script> {% endcomment %}
{% comment %} {% endif %} {% endcomment %}

{% comment %} {{ cart | json }} {% endcomment %}
{% assign cart_title = 'cart.title' | t %}
{% assign button_label = 'cart.continue_shopping' | t %}

{% render 'henk-section-header',
  title: cart_title,
  level: 1,
  align: 'left',
  button_element: 'a',
  button_label: button_label,
  button_url: routes.collections_url,
  button_variant: 'ghost',
  button_icon_name: 'chevron-left'
%}

<section class="henk-cart-section">
  <form
    action="{{ routes.cart_url }}"
    method="post"
    class="henk-cart-section__form"
  >
    <div class="henk-cart-section__grid">
      <div class="henk-cart-section__grid-item">
        <ul class="henk-cart-section__list">
          {% for item in cart.items %}
            <li class="henk-cart-section__list-item">
              <img
                class="henk-cart-section__item-image"
                src="{{ item.image| image_url}}"
                alt="item image"
                width="{{ item.image.width }}"
                height="{{ item.image.height }}"
              >
              <div class="henk-cart-section__item-info">
                <p class="">{{ item.product.title }}</p>

                <div class="henk-cart-section__item-controls">
                  <henk-quantity-stepper name="updates[]" value="{{item.quantity}}"></henk-quantity-stepper>
                  <input
                    class="henk-cart-section__item-quantity"
                    data-js-hide
                    type="text"
                    inputmode="numeric"
                    pattern="[0-9]*"
                    name="updatesx[]"
                    value="{{ item.quantity }}"
                  >
                  <input
                    type="submit"
                    value="{{ 'cart.update' | t }}"
                    class="henk-button henk-cart-section__item-update-button"
                  >
                  {% assign remove_label = 'cart.remove' | t %}
                  {% render 'henk-button',
                    element: 'a',
                    label: remove_label,
                    href: item.url_to_remove,
                    icon_name: 'trash',
                    icon_only: true,
                    aria_label: remove_label
                  %}
                </div>

                <p>{{ item.line_price | money_without_trailing_zeros }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="henk-cart-section__grid-item xcart-list__summary">
        col 2

        <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}">
      </div>
    </div>
  </form>
</section>

{% if template == 'cart' %}
  <script type="module" src="{{ 'henk-quantity-stepper.js' | asset_url }}"></script>
{% endif %}

{% stylesheet %}
  .henk-cart-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    margin: 0 auto;
  }

  .henk-cart-section__list {
    display: grid;
    gap: 24px;
    margin: 0;
    padding: 0;
  }

  .henk-cart-section__list__item {
    display: grid;
    justify-items: start;
  }

  .henk-cart-section__item-image {
    width: 100%;
    height: auto;
    background-color: var(--color-ui-surface-surface-neutral, #ededed);
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .henk-cart-section__item-image + .henk-tag {
    position: absolute;
    top: 24px;
    left: 24px;
  }

  .henk-cart-section__item-controls {
    padding: 24px 0;
    gap: 8px;
    display: grid;
    grid-template-columns: 117px 1fr 1fr;
  }

  @media screen and (min-width: 768px) {
    .henk-cart-section__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .henk-cart-section__grid .henk-cart-section__grid-item:first-child {
      grid-column: 1 / span 2;
    }

    .henk-cart-section__list-item {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-items: stretch;
      gap: 24px;
    }

    .henk-cart-section__item-image {
      margin: 0;
    }
  }

  .henk-cart-section__item-update-button {
    grid-column: 2;
  }

  .henk-icon,
  ::part(henk-icon) {
    align-items: flex-start;
    display: inline-flex;
    place-content: center;
    pointer-events: none;
    transition: transform 0.3s ease;
  }

  .henk-cart-section__item-quantity {
    width: 116px;
    grid-column: 1;
    text-align: center;
    border: 1px solid var(--color-border-muted);
    border-radius: var(--radius-1);
  }

  .henk-cart-section__item-quantity {
    transition: all 0.25s ease;
    transition-behavior: allow-discrete;
  }

  .js-enabled [data-js-hide] {
    /*    opacity: 0;
    display: none; */
  }

  henk-quantity-stepper {
    opacity: 0;
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      background-color 0.25s ease;
    transform: scale(0.98);
  }

  henk-quantity-stepper:defined {
    opacity: 1;
    transform: scale(1);
  }
{% endstylesheet %}
