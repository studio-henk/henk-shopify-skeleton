{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

{% comment %} {{ cart | json }} {% endcomment %}
{% assign cart_title = 'cart.title' | t %}
{% assign button_label = 'cart.continue_shopping' | t %}

{% render 'henk-section-header',
  title: cart_title,
  level: 1,
  align: 'left',
  button_element: 'a',
  button_label: button_label,
  button_url: routes.collections_url,
  button_variant: 'ghost',
  button_icon_name: 'chevron-left'
%}

<section class="henk-cart-section">
  <form
    action="{{ routes.cart_url }}"
    method="post"
    class="henk-cart-section__form"
  >
    <div class="henk-cart-section__grid">
      <div class="henk-cart-section__grid-item">
        <ul class="cart-list henk-cart-list__list --no-bullets">
          {% for item in cart.items %}
            <li class="cart-item cart-list__list-item henk-cart-list__list-item">
              <img
                class="cart-list__list-item-image henk-cart-list__item-image"
                src="{{ item.image| image_url}}"
                alt="item image"
                width="{{ item.image.width }}"
                height="{{ item.image.height }}"
              >
              <div>
                <p class="henk-cart-list__title">{{ item.product.title }}</p>
                <div class="cart-item__qty">
                  <input
                    type="text"
                    inputmode="numeric"
                    pattern="[0-9]*"
                    name="updates[]"
                    value="{{ item.quantity }}"
                  >
                  <input type="submit" value="{{ 'cart.update' | t }}">
                  <!-- {{ 'cart.remove' | t | link_to: item.url_to_remove, class: 'henk-button' }} -->
                  {% assign remove_label = 'cart.remove' | t %}
                  {% render 'henk-button',
                    element: 'a',
                    label: remove_label,
                    href: item.url_to_remove,
                    icon_name: 'trash',
                    icon_only: true,
                    aria_label: remove_label
                  %}
                </div>

                <p>{{ item.line_price | money_without_trailing_zeros }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>

        <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}">
      </div>

      <div class="henk-cart-section__grid-item cart-list__summary">col 2</div>
    </div>
  </form>
</section>
{% stylesheet %}
  .henk-cart-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    /* max-width: 1256px; */
    margin: 0 auto;
    /* padding: 0 24px; */
  }

  .henk-cart-list__item-image {
    width: 100%;
    height: auto;
    background-color: var(--color-ui-surface-surface-neutral, #ededed);
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .henk-cart-list__item-image + .henk-tag {
    position: absolute;
    top: 24px;
    left: 24px;
  }

  .henk-cart-list__list {
    display: grid;
    gap: 24px;
    margin: 0;
  }

  .henk-cart-list__list-item {
    display: grid;
    justify-items: start;
  }

  .henk-cart-list__list-item:has(.henk-tag) {
    position: relative;
  }

  .henk-cart-list__title {
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .henk-cart-list__controls {
    width: 100%;
    display: grid;
    grid-template-columns: 124px auto;
    justify-items: start;
    padding: 24px 0;
    gap: 8px;
  }

  .henk-cart-list__item-price-container {
    margin-bottom: 24px;
  }

  .henk-cart-list__item-info * {
    margin: 0;
  }

  @media screen and (min-width: 768px) {
    .henk-cart-section__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .henk-cart-section__grid .henk-cart-section__grid-item:first-child {
      grid-column: 1 / span 2;
    }

    .henk-cart-list__list-item {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-items: stretch;
      gap: 24px;
    }

    .henk-cart-list__item-image {
      margin: 0;
    }
  }
{% endstylesheet %}
{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
