{% comment %}
  Section wrapper for henk-section-header snippet
  Passes all settings from the section to the snippet
{% endcomment %}

{% render 'henk-section-header',
  id: section.settings.id,
  caption: section.settings.caption,
  title: section.settings.title,
  level: section.settings.level,
  text: section.settings.text,
  align: section.settings.align,
  button_label: section.settings.button_label,
  button_url: section.settings.button_url,
  button_variant: section.settings.button_variant,
  button_size: section.settings.button_size,
  button_extra_classes: section.settings.button_extra_classes
%}

{% schema %}
{
  "name": "HENK Section Header",
  "settings": [
    { "type": "text", "id": "id", "label": "ID" },
    { "type": "text", "id": "caption", "label": "Caption", "default": "Welcome to Studio HENK" },
    { "type": "text", "id": "title", "label": "Title", "default": "Design your perfect sofa" },
    { "type": "textarea", "id": "text", "label": "Body text" },
    {
      "type": "select",
      "id": "level",
      "label": "Heading level",
      "options": [
        { "value": "1", "label": "H1" },
        { "value": "2", "label": "H2" },
        { "value": "3", "label": "H3" },
        { "value": "display", "label": "Display" }
      ],
      "default": "2"
    },
    {
      "type": "select",
      "id": "align",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_url", "label": "Button URL" },
    {
      "type": "select",
      "id": "button_variant",
      "label": "Button variant",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ],
      "default": "primary"
    }
  ],
  "presets": [
    {
      "name": "Section Header",
      "category": "HENK Blocks"
    }
  ]
}
{% endschema %}
