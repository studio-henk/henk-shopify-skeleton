<section class="henk-faq-section henk-section">
  <div class="henk-section__inner">
    <h2 class="henk-faq-section__title">{{ section.settings.title }}</h2>

    <div class="henk-details-group">
      {% for block in section.blocks %}
        {% render 'henk-details',
          summary: block.settings.summary,
          content: block.settings.content,
          variant: block.settings.variant,
          name: block.settings.name,
          icon_name: block.settings.icon_name,
          icon_size: block.settings.icon_size
        %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "summary",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Answer"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icon",
          "options": [
            { "value": "help-circle", "label": "Help Circle" },
            { "value": "calendar", "label": "Calendar" },
            { "value": "truck-thick", "label": "Truck" }
          ],
          "default": "help-circle"
        },
        {
          "type": "select",
          "id": "icon_size",
          "label": "Icon size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "large"
        },
        {
          "type": "select",
          "id": "variant",
          "label": "Variant",
          "options": [
            { "value": "default", "label": "Default" },
            { "value": "plusmin", "label": "Plus / Minus" }
          ],
          "default": "default"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Details name",
          "default": "cc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "FAQ"
    }
  ]
}
{% endschema %}
