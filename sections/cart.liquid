{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

{% comment %} {{ cart | json }} {% endcomment %}
{% assign cart_title = 'cart.title' | t %}
{% assign button_label = 'cart.continue_shopping' | t %}

{% render 'henk-section-header',
  title: cart_title,
  level: 1,
  align: 'left',
  button_element: 'a',
  button_label: button_label,
  button_url: routes.collections_url,
  button_variant: 'ghost',
  button_icon_name: 'chevron-left'
%}

<section class="henk-cart-list">
  <div class="cart-list__column">
    <form action="{{ routes.cart_url }}" method="post">
      <table>
        {% for item in cart.items %}
          <li class="henk-cart-list__list">
            {% render 'image', image: item.image, url: item.url %}
            <div>
              <p class="henk-cart-list__title">{{ item.product.title }}</p>
              {{ 'cart.remove' | t | link_to: item.url_to_remove }}
              <div class="cart-item__qty">
                <input type="text" name="updates[]" value="{{ item.quantity }}">
                <input type="submit" value="{{ 'cart.update' | t }}">
              </div>
            </div>
          </li>
          <tr>
            <td>
              {% render 'image', image: item.image, url: item.url %}
            </td>
            <td>
              <p>{{ item.product.title }}</p>
              {{ 'cart.remove' | t | link_to: item.url_to_remove }}
            </td>
            <td>
              <input type="text" name="updates[]" value="{{ item.quantity }}">
              <input type="submit" value="{{ 'cart.update' | t }}">
            </td>
          </tr>
          <p>price: {{ item.line_price }}</p>
        {% endfor %}
      </table>

      <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}">
    </form>
  </div>

  <div class="cart-list__column cart-list__summary">col 2</div>
</section>
{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
